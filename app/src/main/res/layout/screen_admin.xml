<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <Button
        android:text="Show Scores"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:id="@+id/timset"
        android:layout_below="@+id/adbtn"
        android:layout_alignLeft="@+id/adbtn"
        android:layout_alignStart="@+id/adbtn" />

    <Button
        android:text="Set Timer"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timset"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:id="@+id/button4" />

    <Button
        android:text="Add Questions"
        android:layout_height="wrap_content"
        android:id="@+id/adbtn"
        android:layout_weight="1"
        android:layout_marginTop="118dp"
        android:layout_width="150dp"
        android:layout_below="@+id/textView7"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignStart="@+id/button4" />

    <TextView
        android:text="Welcome Admin Master"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_marginRight="53dp"
        android:layout_marginEnd="53dp"
        android:textColor="@android:color/background_dark"
        android:background="@android:color/holo_orange_light"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="27dp" />
</RelativeLayout>
